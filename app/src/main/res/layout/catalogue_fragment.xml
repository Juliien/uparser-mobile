<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/catalogue"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/firstcatalogue"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:gravity="center"
        app:cardElevation="8dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp"
        tools:ignore="MissingConstraints">
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/secondcatalogue"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:gravity="center"
        app:cardElevation="8dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp"
        app:layout_constraintTop_toBottomOf="@+id/firstcatalogue"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints">
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/thirdcatalogue"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:gravity="center"
        app:cardElevation="8dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp"
        app:layout_constraintTop_toBottomOf="@+id/secondcatalogue"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints">
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>